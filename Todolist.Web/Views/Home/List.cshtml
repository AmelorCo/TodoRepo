@model Todolist.Web.ViewModels.Goals.UserGoalsViewModel

<link rel="stylesheet" href="~/Content/bootstrap-datepicker3.min.css"/>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.Title</h3>
    </div>
    <div class="panel-body">

@using (Ajax.BeginForm((string)ViewBag.ActionName, "Home", null,
            new AjaxOptions
            {
                HttpMethod = "get",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "goalsList"
            }))
{
        <ul class="nav nav-pills">
            <li>
                <p class="navbar-btn">
                    @Html.ActionLink("Новая задача", "NewGoal", "Home", null, new {@class = "btn btn-primary btn-sm"})
                </p>
            </li>
            <li role="separator" class="divider"></li>
            <li>
                <p class="navbar-btn">
                    <a class="btn btn-info btn-sm" role="button" data-toggle="collapse" href="#filters" aria-expanded="True" aria-controls="filters">Фильтры</a>
                </p>
            </li>
            <li>
                <div class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.SearchStr,null,htmlAttributes:new{@class = "input-sm form-control", @placeholder = "Поиск"})
                    </div>
                    <button type="submit" class="btn btn-sm btn-default">Найти</button>
                </div>
            </li>
        </ul>

            <div class="collapse" id="filters">
                <div class="well well-sm">
                    <div style="overflow: hidden;">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-2">Дата:</label>
                                <div class="col-md-4">
                                    <div class="input-daterange input-group" id="datepicker">
                                        <span class="input-group-addon">С</span>
                                        @Html.TextBoxFor(m => m.StartDateStr,null,htmlAttributes:new {@class = "input-sm form-control"})
                                        <span class="input-group-addon">По</span>
                                        @Html.TextBoxFor(m => m.EndDateStr, null, htmlAttributes: new { @class = "input-sm form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Важность:</label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.Priority, Model.Priorities, "-Важность-", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <button type="submit" value="Submit" class="btn btn-sm btn-success form-control">Применить</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div id="goalsList">
            @Html.Partial((string)ViewBag.PartialName, Model.PagedGoals)
        </div>
    </div>

</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/datepicker/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/Scripts/datepicker/locales/bootstrap-datepicker.ru.min.js"></script>
    <script type="text/javascript">

        $('#datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            language: "ru",
            todayHighlight: true
        })

    </script>

}