@model IEnumerable<Todolist.Domain.Entities.Priority>

@{
    ViewBag.Title = "Справочник \"Важность\"";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills">
            <li>
                <p class="navbar-btn">
                    @Html.ActionLink("Добавить категорию важности", "NewPriority", "Home", null, new {@class = "btn btn-primary btn-sm"})
                </p>
            </li>
        </ul>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Название</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>
                        <span><a class="btn btn-sm btn-info" data-toggle="tooltip" title="Изменить" href="@Url.Action("EditPriority", "Home", new {id = item.PriorityId})"><span class="glyphicon glyphicon-edit"></span>&nbsp;Изменить</a></span>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>